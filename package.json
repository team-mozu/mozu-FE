{
  "name": "mozu-fe",
  "packageManager": "yarn@4.8.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node select.js",
    "admin": "yarn workspaces admin",
    "student": "yarn workspaces student",
    "ui": "yarn workspaces ui",
    "util": "yarn workspace util",
    "postinstall": "husky install",
    "lint": "eslint packages --ext ts,tsx --report-unused-disable-directives --cache",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@mozu/eslint-config": "workspace:^",
    "@mozu/prettier-config": "workspace:^",
    "@types/node": "^22.10.5",
    "eslint": "8.57.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "resolutions": {
    "eslint": "8.57.0",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "inquirer": "^12.3.0"
  }
}
