{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "yarn dev",
      "startServerReadyPattern": "Local:.*admin.localhost:3002|ready in",
      "startServerReadyTimeout": 30000,
      "url": [
        "http://admin.localhost:3002/stock-management",
        "http://admin.localhost:3002/stock-management/add",
        "http://admin.localhost:3002/article-management",
        "http://admin.localhost:3002/article-management/add",
        "http://admin.localhost:3002/class-management",
        "http://admin.localhost:3002/class-management/create",

        "http://admin.localhost:3002/stock-management/1003",
        "http://admin.localhost:3002/stock-management/1003/edit",
        "http://admin.localhost:3002/article-management/27",
        "http://admin.localhost:3002/article-management/27/edit",
        "http://admin.localhost:3002/class-management/9",
        "http://admin.localhost:3002/class-management/9/edit",
        "http://admin.localhost:3002/class-management/9/start",
        "http://admin.localhost:3002/class-management/9/monitoring"
      ],

      "puppeteerLaunchOptions": {
        "args": ["--allow-insecure-localhost", "--disable-web-security", "--ignore-certificate-errors"],
        "headless": false
      },
      "puppeteerScript": "./lighthouse-puppeteer.cjs"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.5 }],
        "categories:accessibility": ["warn", { "minScore": 0.7 }],
        "categories:best-practices": ["off"],
        "categories:seo": ["off"],
        "categories:pwa": ["off"]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lhci_reports",
      "reportFilenamePattern": "report-%%PATHNAME%%--%%DATETIME%%.%%EXTENSION%%"
    }
  }
}
