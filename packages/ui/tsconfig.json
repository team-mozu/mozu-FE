{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsxImportSource": "@emotion/react",
    "rootDir": ".",
    "emitDeclarationOnly": false,

    "paths": {
      "@/*": ["./src/*"],
      "@mozu/design-token": ["../design-token"]
    }
  },
  "references": [{ "path": "../design-token" }],
  "include": ["src/**/*", "./declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}
