{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mozu/design-token": ["../design-token/src/index.ts"]
    }
  },
  "references": [{ "path": "../design-token" }],
  "include": [
    "src/**/*",
    "../admin/src/components/article/ArticleDiv.tsx",
    "../admin/src/components/article/ArticleInfo.tsx",
    "../admin/src/components/article/ArticleItem.tsx",
    "../admin/src/components/article/ArticleMainData.tsx",
    "../admin/src/components/article/ArticleManagementDetail.tsx",
    "../admin/src/components/article/ArticleSearchSideBar.tsx",
    "../admin/src/components/article/AddArticleItemModal.tsx",
    "../admin/src/components/stock/AddInvestItemModal.tsx",
    "../admin/src/components/class/ClassPost.tsx",
    "../admin/src/components/stock/StockDiv.tsx",
    "../admin/src/components/stock/StockManagementAdd.tsx",
    "../admin/src/components/stock/StockManagementDetail.tsx",
    "../admin/src/components/stock/StockSearchSideBar.tsx",
    "../admin/src/components/monitoring/ParticipationContainer.tsx",
    "src/Header.tsx",
    "../admin/src/components/article/ImgContainer.tsx",
    "src/DeleteModal.tsx",
    "src/EditDiv.tsx",
    "../admin/src/components/stock/LogoUploader.tsx",
    "src/SearchInput.tsx",
    "src/SideBar.tsx",
    "../admin/src/components/monitoring/TeamInfoTable.tsx",
    "../admin/src/components/monitoring/TeamInvestStatusTable.tsx",
    "src/Input.tsx",
    "../admin/src/components/common/Tables.tsx",
    "../admin/src/components/monitoring/TeamCurrentModal.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
