{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "emitDeclarationOnly": false,
    "declaration": true,
    "composite": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declarationMap": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [{ "path": "../ui", "prebuild": true }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
