{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "types": ["vite/client", "node"],
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@mozu/ui": ["../../ui/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
