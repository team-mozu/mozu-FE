{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": true,
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "info",
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2,
    "bracketSpacing": true,
    "attributePosition": "multiline"
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120,
      "indentStyle": "space",
      "indentWidth": 2,
      "bracketSpacing": true,
      "attributePosition": "multiline",
      "arrowParentheses": "asNeeded",
      "enabled": true,
      "expand": "always",
      "bracketSameLine": true
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "includes": ["**/*", "!.pnp.cjs", "!.pnp.loader.mjs"]
  }
}
