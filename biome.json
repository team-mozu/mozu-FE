{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [],
    "maxSize": 2097152
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": { "enabled": false },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "arrowParentheses": "always",
      "semicolons": "always"
    }
  }
}
